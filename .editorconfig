# EditorConfig帮助开发人员定义和维护不同编辑器和IDE之间的编码样式一致性
# 官网：https://editorconfig.org/

# editorconfig顶级配置文件,停止向上寻找配置文件
root = true

# 默认设置项
[*]
# 缩进样式 <tab | space>
indent_style = space
# 缩进大小 <number>
indent_size = 4
# 换行符类型 <lf | cr | crlf>
end_of_line = lf
# 字符集 <utf-8 | utf-8-bom | utf-16be | utf-16le | latin>
charset = utf-8
# 删除行尾空格 <boolean>
trim_trailing_whitespace = true
# 插入最后一行 <boolean>
insert_final_newline = true


# 下面开始特殊文件特殊配置
[*.{js,ts,css,html,vue,json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
